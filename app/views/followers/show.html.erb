<div class="page-header">
  <h3>Follower #<%= @follower.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Sender</dt>
      <dd>
        <% if @follower.sender.present? %>
          <a href="/users/<%= @follower.sender_id %>">
            <%= @follower.sender.email %>
          </a>
        <% end %>
      </dd>

      <dt>Recipient</dt>
      <dd>
        <% if @follower.recipient.present? %>
          <a href="/users/<%= @follower.recipient_id %>">
            <%= @follower.recipient.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/followers" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @follower.sender %>
        <a href="/followers/<%= @follower.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_follower/<%= @follower.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
