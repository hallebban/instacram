<div class="page-header">
  <h3>Follower #<%= @follower.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Sender</dt>
      <dd><%= @follower.sender_id %></dd>

      <dt>Recipient</dt>
      <dd><%= @follower.recipient_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/followers" class="btn btn-primary">
        Back
      </a>
      <a href="/followers/<%= @follower.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_follower/<%= @follower.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
