<div class="page-header">
  <h1>
    Followers
    <a href="/followers/new" class="btn btn-lg btn-success">New Follower</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Actions</th>
      </tr>

      <% @followers.each do |follower| %>
      <tr>
        <td>
          <% if follower.sender.present? %>
            <a href="/users/<%= follower.sender.id %>">
              <%= follower.sender.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if follower.recipient.present? %>
            <a href="/users/<%= follower.recipient.id %>">
              <%= follower.recipient.email %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/followers/<%= follower.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == follower.sender %>
            <a href="/followers/<%= follower.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_follower/<%= follower.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @followers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
